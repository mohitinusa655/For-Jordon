<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>For Jordon ‚ù§Ô∏è</title>

<style>
  body {
    margin: 0;
    height: 100vh;
    background: radial-gradient(circle at top, #ffb6c1, #ff69b4);
    font-family: 'Poppins', sans-serif;
    overflow: hidden;
    text-align: center;
    color: white;
  }

  .screen {
    display: none;
    padding: 20px;
  }

  .active {
    display: block;
  }

  h1 {
    font-size: 2.2rem;
    margin-top: 15vh;
  }

  button {
    padding: 14px 26px;
    font-size: 1.1rem;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    margin: 10px;
  }

  #yes {
    background: #ff2d75;
    color: white;
  }

  #no {
    position: absolute;
    background: #555;
    color: white;
  }

  .name {
    font-size: 3rem;
    font-weight: bold;
    color: #fff;
    text-shadow: 0 0 15px #ff69b4, 0 0 30px #ff1493;
    margin-top: 20px;
  }

  .lyrics {
    margin-top: 25px;
    font-size: 1.2rem;
    min-height: 60px;
  }

  .highlight {
    color: #fff700;
    text-shadow: 0 0 10px #fff700;
  }

  .ring {
    font-size: 4rem;
    margin-top: 30px;
    cursor: pointer;
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.15); }
    100% { transform: scale(1); }
  }

  .heart, .rose, .firework {
    position: absolute;
    animation: float 4s linear forwards;
  }

  @keyframes float {
    from { transform: translateY(100vh); opacity: 1; }
    to { transform: translateY(-10vh); opacity: 0; }
  }

  .final {
    font-size: 1.5rem;
    margin-top: 25px;
  }
</style>
</head>

<body>

<!-- SCREEN 1 -->
<div id="start" class="screen active">
  <h1>Will you be my Valentine? üíñ</h1>
  <button id="yes">Yes üíï</button>
  <button id="no">No üòÖ</button>
</div>

<!-- SCREEN 2 -->
<div id="love" class="screen">
  <div class="name">Jordon üíñ</div>
  <div class="lyrics" id="lyrics"></div>
  <div class="ring" id="ring">üíç</div>
  <div class="final" id="final"></div>
</div>

<audio id="song" src="perfect.mp3"></audio>

<script>
const yes = document.getElementById("yes");
const no = document.getElementById("no");
const song = document.getElementById("song");
const lyricsBox = document.getElementById("lyrics");
const ring = document.getElementById("ring");
const finalMsg = document.getElementById("final");

const lyrics = [
  { time: 0, text: "I found a love, for me ‚ù§Ô∏è" },
  { time: 4, text: "Darling, just dive right in üíï" },
  { time: 8, text: "Well I found a girl, beautiful and sweet ‚ú®" },
  { time: 13, text: "Oh I never knew you were the someone waiting for me üíñ" }
];

// Move NO button
no.addEventListener("mouseover", () => {
  no.style.left = Math.random() * 80 + "%";
  no.style.top = Math.random() * 80 + "%";
});

// YES clicked
yes.onclick = () => {
  document.getElementById("start").classList.remove("active");
  document.getElementById("love").classList.add("active");

  song.currentTime = 0;
  song.volume = 1;
  song.play();

  // Fade out after 18 seconds
  setTimeout(() => {
    const fade = setInterval(() => {
      if (song.volume > 0.05) {
        song.volume -= 0.05;
      } else {
        song.pause();
        clearInterval(fade);
      }
    }, 200);
  }, 18000);

  karaoke();
};

// Karaoke sync
function karaoke() {
  let index = 0;
  const interval = setInterval(() => {
    if (index < lyrics.length) {
      lyricsBox.innerHTML = `<span class="highlight">${lyrics[index].text}</span>`;
      index++;
    } else {
      clearInterval(interval);
    }
  }, 4000);
}

// Ring click ‚Üí fireworks
ring.onclick = () => {
  for (let i = 0; i < 40; i++) {
    createEffect("üéÜ", "firework");
    createEffect("‚ù§Ô∏è", "heart");
    createEffect("üåπ", "rose");
  }

  finalMsg.innerHTML = `
    Will you be mine forever? üíçüíñ<br><br>
    No matter where life takes us,<br>
    my heart will always choose you.
  `;
};

function createEffect(symbol, cls) {
  const el = document.createElement("div");
  el.className = cls;
  el.innerText = symbol;
  el.style.left = Math.random() * 100 + "vw";
  el.style.fontSize = Math.random() * 30 + 20 + "px";
  document.body.appendChild(el);
  setTimeout(() => el.remove(), 4000);
}
</script>

</body>
</html>
