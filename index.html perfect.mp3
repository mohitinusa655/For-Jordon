<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>For Jorden â¤ï¸</title>

<style>
body {
  margin: 0;
  height: 100vh;
  background: radial-gradient(circle, #ff758c, #ff7eb3);
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'Segoe UI', sans-serif;
  overflow: hidden;
}

.card {
  background: white;
  padding: 35px;
  border-radius: 25px;
  text-align: center;
  box-shadow: 0 25px 50px rgba(0,0,0,0.3);
}

h1, h2, p {
  margin: 10px 0;
}

button {
  padding: 12px 28px;
  font-size: 18px;
  border: none;
  border-radius: 30px;
  cursor: pointer;
  margin: 10px;
}

#yes {
  background: #ff4d6d;
  color: white;
}

#no {
  background: #999;
  position: absolute;
}

#proposal {
  display: none;
}

.ring {
  font-size: 90px;
  cursor: pointer;
  animation: pulse 1.4s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.25); }
  100% { transform: scale(1); }
}

.effect {
  position: absolute;
  font-size: 26px;
  animation: floatUp 3s linear forwards;
}

@keyframes floatUp {
  from { opacity: 1; transform: translateY(0); }
  to { opacity: 0; transform: translateY(-160px); }
}
</style>
</head>

<body>

<!-- ğŸµ Ed Sheeran - Perfect -->
<audio id="song" loop>
  <source src="perfect.mp3" type="audio/mpeg">
</audio>

<!-- ğŸ’– Valentine Question -->
<div class="card" id="question">
  <h1>ğŸ’– Jorden ğŸ’–</h1>
  <h2>Will you be my Valentine?</h2>
  <button id="yes">Yes ğŸ’˜</button>
  <button id="no">No ğŸ™ˆ</button>
</div>

<!-- ğŸ’ Proposal -->
<div class="card" id="proposal">
  <h1>My Love â¤ï¸</h1>
  <h2>Will you be mine forever?</h2>
  <p>You are my today, my tomorrow, and my always.</p>
  <div class="ring">ğŸ’</div>
</div>

<script>
const noBtn = document.getElementById("no");
const yesBtn = document.getElementById("yes");
const song = document.getElementById("song");

noBtn.addEventListener("mouseover", () => {
  noBtn.style.left = Math.random() * (window.innerWidth - 100) + "px";
  noBtn.style.top = Math.random() * (window.innerHeight - 50) + "px";
});

yesBtn.addEventListener("click", () => {
  document.getElementById("question").style.display = "none";
  document.getElementById("proposal").style.display = "block";
  song.play();
});

document.querySelector(".ring").addEventListener("click", () => {
  for (let i = 0; i < 45; i++) {
    createEffect("â¤ï¸");
    createEffect("ğŸŒ¹");
    createEffect("ğŸ†");
  }
});

function createEffect(symbol) {
  const el = document.createElement("div");
  el.className = "effect";
  el.textContent = symbol;
  el.style.left = Math.random() * window.innerWidth + "px";
  el.style.top = window.innerHeight + "px";
  document.body.appendChild(el);
  setTimeout(() => el.remove(), 3000);
}
</script>

</body>
</html>
